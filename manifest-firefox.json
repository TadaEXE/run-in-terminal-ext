{
  "manifest_version": 3,
  "name": "Run in Terminal",
  "description": "Run selected code/text in your terminal.",
  "version": "0.2.0",
  "action": {
    "default_title": "Run in Terminal"
  },
  "icons": {
    "16": "icons/term-16.png",
    "32": "icons/term-32.png",
    "48": "icons/term-48.png",
    "128": "icons/term-128.png"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "nativeMessaging",
    "tabs",
    "activeTab",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_title": "Run in Terminal",
    "default_popup": "pages/popup.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "run-in-terminal@tada.com",
      "strict_min_version": "112.0"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "pages/terminal.html" ],
      "matches": ["<all_urls>"]
    }
  ]
}

